@model otelUcusAppProject.Models.userModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Register</title>
    <link href="~/style/style.css" rel="stylesheet" />
</head>
<body class="backgroundColor">
    <fieldset class="container">

        @using (Html.BeginForm("Register", "Account", FormMethod.Post))
        {
            <legend class="paddingLegend">
                User Registration
            </legend>
            <table>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.username)
                    </td>
                    <td>
                        @Html.TextBoxFor(model => model.username)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.username, null, new { @class = "text text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.u_password)
                    </td>
                    <td>
                        @Html.PasswordFor(model => model.u_password)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.u_password, null, new { @class = "text text-danger" })
                    </td>
                </tr>
                <tr>
                    <td>
                        @Html.LabelFor(model => model.confirmPassword)
                    </td>
                    <td>
                        @Html.PasswordFor(model => model.confirmPassword)
                    </td>
                </tr>
                <tr>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.confirmPassword, null, new { @class = "text text-danger" })
                    </td>
                </tr>

                <tr>
                    <td>
                        <input type="submit" name="name" value="Register" />
                    </td>
                    <td>
                        <input type="reset" name="name" value="Reset" />
                    </td>
                </tr>
                <tr>
                    <td>
                        <a href="~/Account/login">Back to Login</a>
                    </td>
                    <td colspan="2">
                        @Html.ValidationMessageFor(model => model.successMessage, null, new { @class = "alert alert-success" })
                    </td>
                </tr>
            </table>
        }
    </fieldset>
</body>
</html>
