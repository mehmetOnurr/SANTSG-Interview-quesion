@model otelUcusAppProject.Models.locationModel
@{
    ViewBag.Title = "location";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/style/location.css" rel="stylesheet" />
<fieldset>
    <legend>
        Location Register
    </legend>
    @using (Html.BeginForm("location", "location", FormMethod.Post))
            {
                    <table>
                        <tr>
                            <td>
                                @Html.LabelFor(model => model.name)
                            </td>
                            <td>
                                @Html.TextBoxFor(model => model.name)
                            </td>
                        </tr>
                        <tr>
                            <td colspan="2">
                                @Html.ValidationMessageFor(model => model.name, null, new { @class = "text text-danger" })
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input type="submit" name="name" value="Register" />
                            </td>
                            <td>
                                <button type="reset" name="name" value="">Reset</button>
                            </td>
                        </tr>
                        <tr>

                        </tr>
                        <tr>

                        </tr>
                        <tr>
                            
                            
                            <td class="padding_size" >
                                @Html.ValidationMessageFor(model => model.successMessage, null, new { @class = "alert alert-success" })
                            </td>
                        </tr>
                    </table>
            }
    
</fieldset>

